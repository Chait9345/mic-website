generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Link {
  id        String  @id @default(cuid())
  key       String  @unique   // e.g. "join_now"
  label     String
  url       String
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model IdeaSubmission {
  id           String   @id @default(cuid())
  teamName     String        // from "name"
  contactEmail String        // from "email"
  ideaTitle    String        // derived from "idea"
  ideaSummary  String   @db.Text
  createdAt    DateTime @default(now())
}

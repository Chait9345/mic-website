{
  "name": "innovation-centre",
  "private": true,
  "scripts": {
    "install-all": "npm --prefix backend i && npm --prefix frontend i",
    "dev": "concurrently -n BACKEND,FRONTEND -c magenta,cyan \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "npm --prefix backend run dev",
    "dev:frontend": "npm --prefix frontend run dev",
    "build": "npm --prefix frontend run build && npm --prefix backend run build",
    "start": "npm --prefix backend run start"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
